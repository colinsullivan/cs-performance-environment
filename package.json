{
  "name": "cs-performance-environment",
  "version": "0.0.1",
  "description": "Colin's music performance environment",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev_start": "babel-node main.js"
  },
  "author": "Colin Sullivan <colin@colin-sullivan.net>",
  "license": "GPLv3",
  "dependencies": {
    "awakening-sequencers": "^0.7.7",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      [
        "stage-3"
      ]
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": false,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "no-console": 0,
      "no-use-before-define": "error",
      "block-scoped-var": "error"
    }
  },
  "devDependencies": {
    "babel-preset-stage-3": "^6.24.1"
  }
}
