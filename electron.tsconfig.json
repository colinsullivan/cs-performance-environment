{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "src/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "lib": ["es2015"],
  "include": [
    "src/common/**/*",
    "src/main/**/*"
  ]
}
