{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src/",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build/",
    "sourceMap": true,
    "target": "es2020",
    "types": ["node"]
  },
  "lib": ["es2020"],
  "include": [
    "src/common/**/*",
    "src/main.ts",
    "src/main/**/*",
    "__mocks__/**"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
